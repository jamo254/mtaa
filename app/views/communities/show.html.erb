
<div class="row mb-4">
   <div class="col-sm-8">
   <h2>
      <%= @community.name %>
   </h2>
   </div>
   <div class="col-sm-4">
      <% if @is_member %>
       <%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-primary float-end" if @is_member%>
      <% else %>
        <%= render partial: "communities/join", locals: { community_id: @community.id } %>
      <% end %>
   </div>
</div>


<div class="row">
  <div class="col-sm-8">

<%= image_tag "https://images.unsplash.com/photo-1501504905252-473c47e087f8?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" , height: 300 %>
<% @posts.each do |post| %>
   <!-- display the post using the post.community to avoid loading from database -->
   <h4><%= link_to post.title, community_post_path(post.community_id, post) %></h4>
   <p><%= truncate post.body, length: 200 %></p>
<% end %>
</div>
<div class="col-sm-4">
   <div class="card p-3">
      <p class="h5">About the community</p>
      <p class="mt-2"><%= @community.summary %></p>
   
      <p style="color:rgb(12, 128, 182)"><%= pluralize @member_count,  "member" %></p>
   </div>
   <small><%= simple_format @community.rules %></small>
</div>
</div>