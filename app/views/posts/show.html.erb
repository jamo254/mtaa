
<h2><%= @post.title %></h2>

<small><%= simple_format @post.body %></small>

<div id="post-comments">
  <%= render partial: "posts/comments", locals: { comments: @post.comments } %>   
</div>

<p class="h5">Add a comment</p>
 <%= form_for @comment, remote: true do |f| %>
    <%= f.hidden_field  :post_id, value: @post.id %>
    <%= f.text_area :message, placeholder: "Write your comment...", class: "form-control" %>
    <%= f.submit "Submit comment", class: "btn btn-success btn-lg mt-4" %>
<% end %>
  
