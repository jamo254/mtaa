<h2>
  <%= @post.title %>
</h2>

<small>
  <%= simple_format @post.body %>
</small>

<div>
   <h2>Recent Comments</h2>
   <% @post.comments.each do |comment| %>
       <p><%= comment.message %></p>
   <% end %> 
</div>

<div>
  <%= form_with(model: [@community, @post, Comment.new], url: community_post_comments_path(@community, @post), local:true) do |f| %>
    <%= f.text_area :message, placeholder: "Add your comment", class: "form-control" %>
    <%= f.submit "Submit" , disable_with: 'Submitting...', class: "btn btn-warning mt-3" %>
  <% end %>
</div>