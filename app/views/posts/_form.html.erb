<div class="row">
    <div class="col-sm-6">
        <%= form_for [ @community, @post] do |form| %>
            <div class="form-group" >
                <%#= label_tag :title %>
                <%= form.text_field :title, class: "form-control", placeholder:"Title", style:"border-radius: 15px;" %>
            </div>
            <div class="form-group">
                <%= label_tag :body %>
                <%= form.text_area :body, class: "form-control" %>
            </div>
          
            <%= form.submit "Post" , class: "btn btn-primary mt-3" %>

        <% end %>
    </div>
</div>

