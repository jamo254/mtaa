<div class="row">
    <div class="col-sm-6">
        <%= form_for @pos do |form| %>
            <div class="form-group">
                <%= label_tag :title %>
                <%= form.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= label_tag :body %>
                <%= form.text_field :body, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= label_tag :rules %>
                    <%= form.text_area :rules, class: "form-control" %>
            </div>
            <%= form.submit "Submit" , class: "btn btn-primary" %>

        <% end %>
    </div>
</div>